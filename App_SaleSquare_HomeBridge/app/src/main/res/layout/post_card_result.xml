<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_post"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardBackgroundColor="#D7E5B7"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/house_image_reference"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/cute_house" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="210dp"
            android:text="$ 5,522,000" />

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="230dp"
            android:text="Los libertadores, San Isidro, Lima, Lima" />

        <TextView
            android:id="@+id/description_text"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="290dp"
            android:text="Oportunidad ideal para un proyecto de inversión, con ubicación estratégica." />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="250dp"
            app:srcCompat="@drawable/rule_icon" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="250dp"
            app:srcCompat="@drawable/bedroom_icon" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="250dp"
            app:srcCompat="@drawable/bathroom_icon" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="38dp"
            android:layout_height="36dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="250dp"
            app:srcCompat="@drawable/garage_icon" />

        <TextView
            android:id="@+id/size_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="258dp"
            android:autoSizeTextType="uniform"
            android:text="395 m²" />

        <TextView
            android:id="@+id/room_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="258dp"
            android:autoSizeTextType="uniform"
            android:text="3 dorm." />

        <TextView
            android:id="@+id/bathrooms_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="258dp"
            android:autoSizeTextType="uniform"
            android:text="2 baños" />

        <TextView
            android:id="@+id/garages_text"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="350dp"
            android:layout_marginTop="258dp"
            android:autoSizeTextType="uniform"
            android:text="3 estac." />

        <Button
            android:id="@+id/bt_PostDetails"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="340dp"
            android:text="Ver detalles" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>